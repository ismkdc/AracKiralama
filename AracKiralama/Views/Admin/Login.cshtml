
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
</head>
<body class="login-bg">
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="index.html">Araç Kiralama - Admin Paneli</a></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-wrapper">
                    <div class="box">
                        <div class="content-wrap">
                            <h6>Giriş yap</h6>
                            <form action="" method="post">
                                <input class="form-control" name="username" type="text" placeholder="Kullanıcı Adı">
                                <input class="form-control" name="password" type="password" placeholder="Parola">
                                <div class="action">
                                    <input type="submit" class="btn btn-primary signup" value="Giriş">
                                </div>
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Content/js/custom.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</body>